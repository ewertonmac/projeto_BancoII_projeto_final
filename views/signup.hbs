<div class="container-login">
    {{usuario}}
    <form method="POST" action="/auth/signup">
        <div class="mb-3">
            <label for="input-nome" class="form-label">Nome:</label>
            <input type="text" name="nome" class="form-control" id="input-nome" required>
        </div>
        <div class="mb-3">
            <label for="input-sobrenome" class="form-label">Sobrenome:</label>
            <input type="text" name="sobrenome" class="form-control" id="input-sobrenome" required>
        </div>
        <div class="mb-3">
            <label for="input-email"  class="form-label">E-mail:</label>
            <input type="email" name="email" class="form-control" id="input-email" required>
            <div id="emailHelp" class="form-text">Exemplo: usuario@dominio.com</div>
        </div>
        <div class="mb-3">
            <label for="input-senha"  class="form-label">Senha:</label>
            <input type="password" name="senha" class="form-control" id="input-senha" required>
        </div>
        <div class="mb-3">
            <label for="input-repetir-senha" class="form-label">Repita a senha:</label>
            <input type="password" class="form-control" id="input-repetir-senha" required>
        </div>
        <div class="mb-3">
            <label for="select-status" class="form-label">Você é:</label>
            <select class="form-select" name="status" id="select-status" required>
                <option value="Estudante">Estudante</option>
                <option value="Professor">Professor</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Criar conta</button>
    </form>
</div>